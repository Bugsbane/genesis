<html>
<head id="_head">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <headstylesheets/>
    <headscripts/>
    <link rel="shortcut icon" href="/dl/core/ui/favicon.png" />
</head>
<body id="main">

<div id="page">
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand"><i class="gen-arkos-round"></i> Genesis</a>
            </div>
            <div class="ui-user-info pull-right">
                <strong id="cat-username"></strong>
                <div class="btn-group">
                    <a href="#" onclick="return Genesis.selectCategory('usersplugin');"><i class="gen-users" style="font-size: 1.5em;"></i></a>
                    <a href="/logout"><i class="gen-exit" style="font-size: 1.5em;"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div id="ui-lower-bar">
        <div class="container">
            <span id="topplaceholder-top"/>
            <span id="topplaceholder-bottom"/>
            <div class="pull-right">
                <popover id="power-pop" placement="bottom" class="ui-el-top-category gen-switch"></popover>
                <div class="popover bottom">
                  <div id="power-pop-content" class="popover-inner">
                    <ul>
                        <li><a class="popover-link" href="#" onclick="Genesis.showWarning('Are you sure you want to reload the Genesis process?', 'gen_reload');"><i class="gen-arkos-round"></i> Reload Genesis</a></li>
                        <li><a class="popover-link" href="#" onclick="Genesis.showWarning('Are you sure you want to shutdown your system?', 'gen_shutdown');"><i class="gen-switch"></i> Shutdown System</a></li>
                        <li><a class="popover-link" href="#" onclick="Genesis.showWarning('Are you sure you want to restart your system?', 'gen_reboot');"><i class="gen-loop-2"></i> Restart System</a></li>
                    </ul>
                  </div>
                </div>
                <popover id="settings-pop" placement="bottom" styles="float:right;" class="ui-el-top-category gen-settings"></popover>
                <div class="popover bottom">
                  <div id="settings-pop-content" class="popover-inner">
                    <ul>
                        <li><a class="popover-link" href="#" onclick="return Genesis.selectCategory('pluginmanager');"><i class="gen-box-add"></i> Applications</a></li>
                        <li><a class="popover-link" href="#" onclick="return Genesis.selectCategory('recoveryplugin');"><i class="gen-history"></i> Recovery</a></li>
                        <li><a class="popover-link" href="#" onclick="return Genesis.selectCategory('configplugin');"><i class="gen-arkos-round"></i> Genesis Settings</a></li>
                        <li><a class="popover-link" href="#" onclick="return Genesis.selectCategory('networkplugin');"><i class="gen-network"></i> Network Settings</a></li>
                        <li><a class="popover-link" href="#" onclick="return Genesis.selectCategory('sysconfigplugin');"><i class="gen-cog"></i> System Settings</a></li>
                    </ul>
                  </div>
                </div>
            </div>
        </div>
    </div>

    <div id="whiteout" style="display:none;opacity:0" />
    <div id="pbox">
        <p class="pbox-status" id="pbox-text">Please wait...</p>
        <div style="float:left;">
            <img src="/dl/core/ui/ajax.gif" />
        </div>
    </div>
    
    <div class="container">
        <div class="row">
            <div class="sidebar col-md-2" id="leftplaceholder" />
       	    <div class="content col-md-10" id="rightplaceholder" />
        </div>
    </div>

    <div class="footer">
        <div class="container">
            <div id="version" class="pull-left" />
            <div id="links" class="pull-right">
                <a href="http://bbs.arkos.io/" id="feedback-link" target="_blank"><i class="gen-users"></i> Community</a>
                <a href="https://www.gnu.org/licenses/gpl.html" target="_blank"><i class="gen-certificate"></i> License</a>
            </div>
        </div>
    </div>

    <div class="shadebox" id="warningbox">
        <h3><i class="gen-warning pull-right"></i>Warning!</h3>
        <strong id="warning-text" />
        <div class="shadebox-footer">
            <btn text="OK" design="outline-inverse-warn warning-button" size="reg" onclick="return false;" />
            <btn text="Cancel" href="#" design="outline-inverse outline-inverse-gray" size="reg" onclick="Genesis.cancelWarning();">Cancel</btn>
        </div>
    </div>

    <script>
        Genesis.init();
    </script>
</div>

</body>
</html>
