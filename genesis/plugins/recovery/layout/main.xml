<xml>
    <toolbar>
        <button id="btnBackup" iconfont="gen-folder-download" />
        <button id="backupall" iconfont="gen-folder-download" text="Backup everything" />
        <button id="upload" iconfont="gen-upload" text="Upload Backup" design="default pull-right" />
        <button id="downloadall" iconfont="gen-download" text="Download All" design="default pull-right" onclick="window.open('/recovery/all', '_blank')" />
    </toolbar>
    <pad id="main">
        <hcontainer>
            <list id="provs" width="200" height="400" />
            <scrollcontainer width="550" height="400">
                <dt id="backs" width="100%" noborder="True">
                    <dtr header="True">
                        <dth>
                            <label text="Revision" />
                        </dth>
                        <dth>
                            <label text="Date" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </scrollcontainer>
        </hcontainer>
    </pad>
</xml>
