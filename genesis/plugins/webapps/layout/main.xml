<xml>
    <toolbar>
        <button id="add" text="Add website" iconfont="gen-plus-circle" />
    </toolbar>

    <pad id="main">
        <dt id="list" width="100%">
            <dtr header="True">
                <dth width="1" />
                <dth>
                    <label text="Name" />
                </dth>
                <dth>
                    <label text="Type" />
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>

    <dialogbox id="dlgAdd">
        <pad>
            <hcontainer>
                <list id="provs" width="200" height="300" />
                <scrollcontainer width="400" height="300">
                    <image id="logo" />
                    <formline text="Name">
                        <label name="appname" id="appname" />
                    </formline>
                    <formline text="Intro">
                        <label name="short" id="short" />
                    </formline>
                    <formline text="Website">
                        <outlinklabel id="website" />
                    </formline>
                    <formline text="Description">
                        <label name="desc" id="desc" />
                    </formline>
                </scrollcontainer>
            </hcontainer>
        </pad>
        <formline text="Site Name">
            <textinput name="name" id="name" />
        </formline>
    </dialogbox>

</xml>
