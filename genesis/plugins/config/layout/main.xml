<xml>
    <toolbar>
        <hcontainer>
            <lt>
                <ltr>
                    <ltd>
                        <button text="Restart Genesis" id="restart" icon="/dl/core/ui/stock/refresh.png" />
                    </ltd>
                    <ltd float="right">
                        <button id="shutdown" text="Shutdown" warning="Shutdown Node" icon="/dl/core/ui/stock/service-failed.png"/>
                        <button id="reboot" text="Reboot" warning="Reboot Node" icon="/dl/core/ui/stock/refresh.png"/>
                    </ltd>
                </ltr>
            </lt>
        </hcontainer>
    </toolbar>
    <label size="5" text="General" />

        <simpleform id="frmGeneral">
            <formline text="Host">
                <textinput name="bind_host" id="bind_host"/>
            </formline>
            <formline text="Port">
                <textinput name="bind_port" id="bind_port"/>
            </formline>
            <formline text="Authorization" help="See below for authorized accounts">
                <checkbox id="httpauth" name="httpauth" text="Enable" />
            </formline>
            <formline text="SSL" help="Changing SSL settings requires Genesis restart">
                <checkbox name="ssl" id="ssl" text="Enable" />
            </formline>
            <formline text="SSL certificate">
                <textinput name="cert_file" id="cert_file" design="xlarge" />
            </formline>
            <formline text="SSL key">
                <textinput name="cert_key" id="cert_key" design="xlarge" />
            </formline>
            <formline text="Visual effects" help="Smooth transitions and others">
                <checkbox id="nofx" name="nofx" text="Disable" />
            </formline>
            <formline>
                <button onclick="form" form="frmGeneral" design="primary" action="OK" text="Save" />
            </formline>
        </simpleform>

    <pad id="main">
    </pad>

    <label size="5" text="Plugin Options" />

    <pad>
        <dt width="300" id="configs">
            <dtr header="True">
                <dth width="20" />
                <dth>
                    <label text="Name"/>
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>
</xml>
