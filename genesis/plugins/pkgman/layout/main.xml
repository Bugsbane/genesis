<xml>
    <toolbar>
        <btn id="refresh" text="Refresh" iconfont="gen-loop-2" />
        <btn id="getlists" text="Fetch lists" iconfont="gen-download" />
        <btn id="upgradeall" text="Upgrade" iconfont="gen-arrow-up-2" />
        <btn id="apply" text="Apply" iconfont="gen-checkmark" />
        <btn id="cancelall" text="Cancel" iconfont="gen-close-2" />
        <div class="pull-right">
            <simpleform id="frmSearch">
                <inputgroup>
                    <textinput name="query" />
                    <inputgroupbtn>
                        <btn text="Search" iconfont="gen-search" onclick="form" form="frmSearch" />
                    </inputgroupbtn>
                </inputgroup>
            </simpleform>
        </div>
    </toolbar>

    <pad id="main">
        <tabcontrol id="tabs" live="True" active="upgrades">
            <tabheader text="Upgrades Available" id="upgrades" />
            <tabheader text="Broken Packages" id="broken" />
            <tabheader text="Search Results" id="search" />
            <tabheader text="Pending Actions" id="pending" />

            <tabbody id="upgrades">
                <scrollcontainer width="100%" height="520" >
                    <dt id="uplist" noborder="True" width="100%">
                        <dtr header="True">
                            <dth width="20" />
                            <dth>
                                <label text="Name" />
                            </dth>
                            <dth>
                                <label text="Version" />
                            </dth>
                            <dth>
                                <label text="Description" />
                            </dth>
                            <dth width="1" />
                        </dtr>
                    </dt>
                </scrollcontainer>
            </tabbody>
            <tabbody id="broken">
                <scrollcontainer width="100%" height="520" >
                    <dt id="brlist" noborder="True" width="100%">
                        <dtr header="True">
                            <dth width="20" />
                            <dth>
                                <label text="Name" />
                            </dth>
                            <dth>
                                <label text="Version" />
                            </dth>
                            <dth>
                                <label text="Description" />
                            </dth>
                            <dth width="1" />
                        </dtr>
                    </dt>
                </scrollcontainer>
            </tabbody>
            <tabbody id="search">
                <scrollcontainer width="100%" height="520" >
                    <dt id="selist" noborder="True" width="100%">
                        <dtr header="True">
                            <dth width="20" />
                            <dth>
                                <label text="Name" />
                            </dth>
                            <dth>
                                <label text="Version" />
                            </dth>
                            <dth>
                                <label text="Description" />
                            </dth>
                            <dth width="1" />
                        </dtr>
                    </dt>
                </scrollcontainer>
            </tabbody>
            <tabbody id="pending">
                <scrollcontainer width="100%" height="520" >
                    <dt id="pelist" noborder="True" width="100%">
                        <dtr header="True">
                            <dth width="20" />
                            <dth>
                                <label text="Name" />
                            </dth>
                            <dth>
                                <label text="Version" />
                            </dth>
                            <dth>
                                <label text="Description" />
                            </dth>
                            <dth width="1" />
                        </dtr>
                    </dt>
                </scrollcontainer>
            </tabbody>
        </tabcontrol>
    </pad>
</xml>
