<xml>
    <toolbar>
        <btn id="newshare" text="Add share" iconfont="gen-folder-plus" />
        <btn id="newuser" text="Add user" iconfont="gen-user-plus" />
    </toolbar>
    
    <pad id="main">
        <tabcontrol id="tabs" active="0">
            <tabheader text="Share" id="0"/>
            <tabheader text="Users" id="1"/>
            <tabheader text="General" id="2"/>

            <tabbody id="0">
                <dt id="shares" width="100%">
                    <dtr header="True">
                        <dth width="1" />
                        <dth>
                            <label text="Name" />
                        </dth>
                        <dth>
                            <label text="Path" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>
            
            <tabbody id="1">
                <dt id="users" width="100%">
                    <dtr header="True">
                        <dth width="1" />
                        <dth>
                            <label text="Name" />
                        </dth>
                        <dth width="1" />
                    </dtr>
                </dt>
            </tabbody>
            
            <tabbody id="2">
               <container id="tab2" />
            </tabbody>
            
        </tabcontrol>
    </pad>
</xml>
