<xml>
    <toolbar>
        <button id="refresh" text="Refresh" iconfont="gen-loop-2" />
        <button id="getlists" text="Fetch lists" iconfont="gen-download" />
        <button id="upgradeall" text="Upgrade" iconfont="gen-arrow-up-2" />
        <button id="apply" text="Apply" iconfont="gen-checkmark" />
        <button id="cancelall" text="Cancel" iconfont="gen-close-2" />
            <simpleform id="frmSearch">
                <textinput name="query" size="20" />
                <button text="Search" onclick="form" form="frmSearch" />
            </simpleform>
    </toolbar>

    <pad id="main">
        <tabcontrol id="tabs" live="True" active="upgrades">
            <tabheader text="Upgrades" id="upgrades" />
            <tabheader text="Broken" id="broken" />
            <tabheader text="Search" id="search" />
            <tabheader text="Pending" id="pending" />
        </tabcontrol>

        <scrollcontainer width="765" height="520" >
            <dt id="list" noborder="True" width="100%">
                <dtr header="True">
                    <dth width="20" />
                    <dth>
                        <label text="Name" />
                    </dth>
                    <dth>
                        <label text="Version" />
                    </dth>
                    <dth>
                        <label text="Description" />
                    </dth>
                    <dth width="1" />
                </dtr>
            </dt>
        </scrollcontainer>
    </pad>
</xml>
