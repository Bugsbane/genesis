<xml>
    <toolbar id="toolbar">
        <btn id="refresh" text="Refresh" iconfont="gen-loop-2" />
        <btn id="reload" text="Reload" iconfont="gen-loop-2" />
        <btn id="set" text="Add Process" iconfont="gen-plus-circle" />
    </toolbar>

    <pad id="main">
        <dt id="list" width="100%">
            <dtr header="True">
                <dth>
                    <label text="Name" />
                </dth>
                <dth>
                    <label text="Type" />
                </dth>
                <dth>
                    <label text="Status" />
                </dth>
                <dth>
                    <label text="Info" />
                </dth>
                <dth width="1" />
            </dtr>
        </dt>
    </pad>

    <dialogbox id="dlgSet">
        <formline text="Process type">
            <select id="ptype" name="ptype">
                <selectoption id="pprogram" value="program" text="Program" selected="True" />
                <selectoption id="pgroup" value="group" text="Group" />
                <selectoption id="pfcgi-program" value="fcgi-program" text="FCGI Program" />
                <selectoption id="peventlistener" value="eventlistener" text="Event Listener" />
                <selectoption id="prpcinterface" value="rpcinterface" text="RPC Interface" />
            </select>
        </formline>
        <formline text="Process name">
            <textinput id="name" name="name" />
        </formline>
        <formline text="Configuration">
            <textinputarea id="config" name="config" value="" />
        </formline>
    </dialogbox>
</xml>
