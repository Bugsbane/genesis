<xml>
    <dialogbox id="dlgInfo" hidecancel="True">
        <formline text="Name">
            <label id="name" />
        </formline>
        <formline text="Command">
            <label id="cmd" />
        </formline>
        <formline text="UID">
            <label id="uid" />
        </formline>
        <formline text="GID">
            <label id="gid" />
        </formline>
        <formline text="CPU times">
            <label id="times" />
        </formline>
        <formline id="parentRow" text="Parent">
            <label id="parent" />
            <btn id="parentinfo" text="Info" />
        </formline>

        <hcontainer>
            <btn text="Suspend" id="suspend" />
            <btn text="Resume" id="resume" />

            <simpleform id="frmKill">
                <select id="sigs" name="signal" />
                <btn onclick="form" form="frmKill" action="OK" text="Kill" />
            </simpleform>
        </hcontainer>

    </dialogbox>
</xml>
